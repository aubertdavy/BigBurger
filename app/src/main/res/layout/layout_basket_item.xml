<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/card_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin">

        <GridLayout
            android:layout_width="365dp"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="5">

            <ImageView
                android:id="@+id/img_thumb"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_rowSpan="5"
                android:src="@drawable/macdo"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_item_margin"
                android:layout_marginEnd="@dimen/card_item_margin"
                android:layout_column="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                tools:text="The Big Burger"/>

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_item_margin"
                android:layout_marginEnd="@dimen/card_item_margin"
                android:layout_row="1"
                android:layout_column="1"
                android:textColor="@color/colorPrimary"
                tools:text="Prix : 15â‚¬" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_rowSpan="2"
                android:layout_column="1"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_window_minimize"
                    android:padding="5dp"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/txt_nb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/card_item_margin"
                    android:layout_marginEnd="@dimen/card_item_margin"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    tools:text="x5" />

                <ImageView
                    android:id="@+id/img_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_plus"
                    android:padding="5dp"
                    android:scaleType="centerCrop"/>

            </LinearLayout>

        </GridLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>